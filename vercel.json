{
    "version": 2,
    "name": "amigo-secreto",
    "outputDirectory": "public",
    "builds": [
        { "src": "*.html", "use": "@vercel/static" },
        { "src": "*.py", "use": "@vercel/python" },
        { "src": "*.js", "use": "@vercel/node", "config": { "includeFiles": ["public/**"] } }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "public/server.js"
        }
    ]
}