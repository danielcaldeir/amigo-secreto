{
    "version": 2,
    "installCommand": "npm install --foreground-scripts",
    "buildCommand": "rimraf public && npm run build",
    "outputDirectory": "public",
    "rewrites": [
        { "source": "/(.*)", "destination": "/public/server.js" }
    ],
    "builds": [
        { "src": "public/server.js", "use": "@vercel/node" }
    ]
}